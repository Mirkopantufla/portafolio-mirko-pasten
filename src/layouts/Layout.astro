---
import Stars from "../components/GlobalStyles.astro";
import "@fontsource-variable/roboto-slab";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script
			type="text/javascript"
			src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
		></script>

	</head>
	<body>
		<Stars />
		<main
			id="main-container"
			class="overflow-y-scroll max-h-[100vh] snap-mandatory snap-y"
		>
			<slot />
		</main>
		<script src="../data/emailJS.ts"></script>
		<script src="../utils/borders.ts"></script>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
		--primary-color: 255, 255, 255;
		--secondary-color: 0, 0, 0;
		--base-color: rgba(148, 163, 184, 0.1);
		--accent-base-color: rgba(100, 116, 139, 1);
	}

	[data-theme="dark"] {
		--primary-color: 0, 0, 0;
		--secondary-color: 255, 255, 255;
	}

	[data-theme="dark"] .invert-icon {
		filter: invert(0);
	}

	[data-theme="dark"] .reverse-icon {
		filter: invert(100%);
	}

	.invert-icon {
		filter: invert(100%);
	}

	.reverse-icon {
		filter: invert(0);
	}

	html {
		font-family: "Roboto Slab Variable", serif;
	}

	h1, h2, h3, h4, h5, h6, p, label {
		color: rgb(var(--primary-color));
	}

	button, .proyect_card{
		background-color: rgb(var(--primary-color));
	}

	input, textarea, button, .proyect_card p{
		color: rgb(var(--secondary-color));
	}
	
	section {
		background-color: rgb(var(--secondary-color));
	}

	.sombreado-negro {
		filter: drop-shadow(1px 2px 6px rgba(var(--secondary-color), 0.4));
	}

	.sombreado-blanco {
		filter: drop-shadow(1px 2px 6px rgba(var(--primary-color), 0.4));
	}

	.bg-white-transparent {
		background-color: rgba(var(--primary-color), 0.1);
	}

	.bg-secondary {
		background-color: rgb(var(--secondary-color));
	}

</style>