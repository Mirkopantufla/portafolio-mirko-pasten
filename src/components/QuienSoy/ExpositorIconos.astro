---
import IconoLenguaje from "./IconoLenguaje.astro";
import { iconosStack } from "../../data/proyectos.ts";

interface Props {
	seccion: string;
}

const { seccion } = Astro.props
---

<div class="flex flex-wrap justify-evenly items-center my-2">
    {
      iconosStack.map((icono) => {
        if (icono.section === seccion) {
          return (
            <IconoLenguaje
              href={icono.href}
              iconName={icono.icono}
              className={icono.className}
            />
          );
        }
      })
    }
</div>