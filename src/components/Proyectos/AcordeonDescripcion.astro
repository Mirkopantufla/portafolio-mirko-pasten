---
import type { Stack } from '../../data/proyectos'

interface Props {
    id: string;
    descripcion: string;
    stack: Stack[];
    fecha: string;
}

const { id, descripcion, stack, fecha } = Astro.props;
---

<div class="border-y-2 border-black">
    <button data-id={`${id}`} class="boton-acordeon w-full flex justify-center gap-1 items-center py-2 bg-white-transparent">
      <span class="invert font-semibold hover:font-bold hover:underline">Descripción</span>
      <span id={`icon-${id}`} class="transition-transform duration-300 animate-bounce pt-1">
        <img src="/icons/down-arrow.png" alt="Flecha Abajo" class="h-3 w-3 invert">
      </span>
    </button>
    <div id={`content-${id}`} class="max-h-0 overflow-hidden transition-all duration-300 ease-in-out">
        <p class="text-md whitespace-pre-line p-4">
            Fecha realización: {fecha}
        </p>
      <p class="text-md whitespace-pre-line p-4">
        {descripcion}
      </p>
      <p class="p-4">
        <b class="text-lg">
            Stack Utilizado:
        </b>
        <br>
        {
        stack.map(item => {
            return(
            <span class="italic">{`- ${item.nombre}`}
            <br/>
            </span>
            )
        })
        }
      </p>
    </div>
</div>

