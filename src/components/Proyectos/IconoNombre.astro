---
import type { Stack } from '../../data/proyectos'

interface Props {
    stack: Stack[]
}

const { stack } = Astro.props
---

<div class="flex flex-col">
    <div class="p-2 flex justify-evenly">
        {
            stack.map((item) => (
                <div class="overflow-y-clip">
                    <div class="max-h-9 max-w-9 flex flex-col items-center hover:-translate-y-full transition ease-out duration-[500ms]">
                        <div class="flex-1 flex justify-center items-center min-w-9 max-w-9 min-h-9 max-h-9">
                            <img
                            class="drop-shadow-lg"
                            src={`/icons/icono-${item.iconos}.png`}
                            alt=""
                        />
                        </div>
                        <div class="min-h-9 flex-1 flex justify-center items-center text-center whitespace-nowrap">
                            <span class="text-sm bg-amber-100 rounded-md border border-1 border-black p-1 px-2">
                                {item.nombre}
                            </span>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</div>