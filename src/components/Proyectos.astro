---
import ProjectCard from "./Proyectos/ProjectCard.astro"
import { proyectosDisponibles } from "../data/proyectos.ts"

---

<section id="proyectos" class="min-h-[100vh] bg-black snap-center grid grid-rows-auto grid-cols-12 place-items-center gap-10 p-5 md:p-10 lg:p-12 xl:p-16 2xl:p-24">
    <div class="row-span-2 col-span-12 p-5 px-24 bg-white-transparent rounded-ee-full rounded-tl-full">
        <h1 class="text-white text-5xl">Proyectos</h1>
    </div>
    {
        proyectosDisponibles.map(proyecto => 
            <div class="row-span-3 col-span-12 lg:col-span-6 z-10">
                <ProjectCard proyecto={proyecto}/>
            </div>
        )
    }
</section>