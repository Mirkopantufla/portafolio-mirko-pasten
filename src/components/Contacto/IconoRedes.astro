---
interface Props {
    src: string,
    href: string,
}

const { src, href } = Astro.props
---

<div class="flex flex-col justify-center items-center py-2">
    <a class="hover:opacity-85" href={href} target="_blank">
        <div class="w-12 lg:w-16 xl:w-20 rounded-3xl">
            <img class="invert-icon rounded-3xl" src={src} alt="">
        </div>
    </a>
</div>